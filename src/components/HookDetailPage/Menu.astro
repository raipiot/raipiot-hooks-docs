---
const { hooks } = Astro.props;
const { name } = Astro.params;
---

<ul
  class="fixed top-[360px] right-[calc(50vw + (50vw - 360px))] w-[200px] hidden lg:block bg-gray-900/70 rounded-md shadow-md py-2"
>
  {
    hooks.map((hook) => (
      <li
        class:list={[
          "px-2 grid grid-cols-[12px_auto] gap-[4px]",
          {
            "before:!opacity-100": name === hook,
          },
        ]}
      >
        <a class="truncate" title={hook} href={`/hooks/${hook}`}>
          {hook}
        </a>
      </li>
    ))
  }
</ul>

<style lang="scss">
  ul {
    max-height: calc(100vh - 600px);
    overflow-y: auto;
    li {
      &::before {
        content: ">";
        color: cyan;
        opacity: 0;
      }
      &:hover::before {
        opacity: 1;
      }
    }
  }
</style>
