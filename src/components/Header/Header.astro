---
const { pathname } = Astro.url
import CSS from "./header.module.scss"
---

<div class="flex items-center justify-between sm:p-8 p-4 sm:px-12">
  <div class="flex flex-col gap-1 items-center">
    <h1 class="text-3xl font-bold animate-rotate-x">Raipiot</h1> 
    <p class="text-sm opacity-70 hover:opacity-100 transition-opacity">React Hooks Doc</p>
  </div>

  <nav class={`${CSS.header_nav} flex gap-4`} >
    <div class="relative">
      <a class={pathname === '/' ? '!text-sky-500': 'hover:text-sky-400'} href="/">Home</a>
    </div>
    <div class="relative">
    <a class={pathname === '/github' ? '!text-sky-500': 'hover:text-sky-400'} href="/mdx">Docs</a>
    </div>
    <div class="relative">
    <a class={pathname === '/contact' ? '!text-sky-500': 'hover:text-sky-400'} href="/github">GitHub</a>    
    </div>
  </nav>
</div>