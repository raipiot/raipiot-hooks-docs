---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Header from "~/components/Header/Header.astro";
import { packageInfo } from "~/config";
import "~/styles/base.tw.css";
import "~/styles/public.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Raipiot team: react hooks examples" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={packageInfo.keywords.join(",")} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <div class="flex-grow mb-auto">
      <slot />
    </div>
  </body>
</html>
