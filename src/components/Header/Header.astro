---
const { pathname } = Astro.url
import CSS from "./header.module.scss"
import GithubIcon from "~icons/mdi/github"
import CompanyIcon from "~icons/mdi/office-building-outline"
import HomepageIcon from "~icons/mdi/home"
import { packageInfo } from "~/config"
---

<div class="flex items-center justify-between sm:p-8 p-4 sm:px-12">
  <div class="flex flex-col gap-1 items-center">
    <h1 class="text-3xl font-bold animate-rotate-x bg-white px-2 py-1 rounded-md text-sky-600" id="logo_name">
      <a href="/">{packageInfo.name}</a>
    </h1> 
    <p class="text-sm opacity-70 hover:opacity-100 transition-opacity">Awesome Raipiot Hooks</p>
  </div>

  <nav class={`${CSS.header_nav} flex gap-4`} >
    <div class="relative">
      <a class={pathname === '/' ? '!text-sky-500': 'hover:text-sky-400'} href="/">
        <HomepageIcon className="w-5 h-5" />
        Home</a>
    </div>
    <div class="relative">
    <a class="hover:text-sky-400" href="https://www.raipiot.com/">
      <CompanyIcon className="w-4.5 h-4.5" />
      Company</a>
    </div>
    <div class="relative">
    <a class="hover:text-sky-400" href="https://github.com/raipiot/awesome-hooks">
    <GithubIcon className="w-5 h-5" />
      Github
    </a>    
    </div>
  </nav>
</div>

<script>
const logo = document.querySelector('#logo_name')
if(logo) {
  setInterval(() => {
    logo.classList.toggle('animate-rotate-x')
  }, 4000)
}
</script>