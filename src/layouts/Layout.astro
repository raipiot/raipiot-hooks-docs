---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Header from "~/components/Header/Header.astro"
import '~/styles/base.tw.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Raipiot team: react hooks examples" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		--r-fff: #efefef;
		--r-theme: #282d3c;
	}
	/* font */
	@font-face {
		font-family: zpix;
		src: url('/fonts/zpix.ttf') format('ttf');
		font-weight: normal;
  	font-style: normal;
  	font-display: swap;
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: var(--r-theme);
		background-image: repeating-linear-gradient(to right,#eeeeee10,#33333310 1px,transparent 1px,transparent 40px),repeating-linear-gradient(to bottom,#eeeeee10,#33333310 1px,transparent 1px,transparent 40px);
		min-height: 100vh;
		color: var(--r-fff);
	}
	.zpix {
		font-family: zpix, system-ui, sans-serif;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
